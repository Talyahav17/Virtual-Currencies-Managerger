{
    "manifest_version": 3,
    "name": "Virtual Currencies Manager",
    "version": "1.0",
    "description": "Manage your virtual currency holdings across multiple trading systems",
    "permissions": [
      "storage",
      "downloads",
      "theme"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "web_accessible_resources": [{
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }]
} 